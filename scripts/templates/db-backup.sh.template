#!/bin/bash

# Database Backup Script for Production
# This script creates timestamped backups of the PostgreSQL database

set -e

# Colors
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
NC='\033[0m'

# Configuration
BACKUP_DIR="./db-backups"
DB_NAME="doit_db"
DB_USER="doit_user"
DB_PASSWORD="YOUR_PASSWORD_HERE"
CONTAINER_NAME="todolist-postgres"

# Create backup directory if it doesn't exist
mkdir -p "$BACKUP_DIR"

# Generate timestamp
TIMESTAMP=$(date +"%Y%m%d_%H%M%S")
BACKUP_FILE="$BACKUP_DIR/doit_backup_$TIMESTAMP.sql"

echo -e "${YELLOW}ðŸ”„ Starting database backup...${NC}"

# Create backup using podman exec
podman exec "$CONTAINER_NAME" pg_dump -U "$DB_USER" "$DB_NAME" >"$BACKUP_FILE"

if [ $? -eq 0 ]; then
  # Compress the backup
  gzip "$BACKUP_FILE"
  BACKUP_FILE="${BACKUP_FILE}.gz"

  # Get file size
  SIZE=$(du -h "$BACKUP_FILE" | cut -f1)

  echo -e "${GREEN}âœ“ Backup completed successfully!${NC}"
  echo -e "${GREEN}  File: $BACKUP_FILE${NC}"
  echo -e "${GREEN}  Size: $SIZE${NC}"

  # Keep only last 10 backups
  echo -e "${YELLOW}ðŸ§¹ Cleaning old backups (keeping last 10)...${NC}"
  cd "$BACKUP_DIR"
  ls -t doit_backup_*.sql.gz 2>/dev/null | tail -n +11 | xargs -r rm
  REMAINING=$(ls -1 doit_backup_*.sql.gz 2>/dev/null | wc -l)
  echo -e "${GREEN}âœ“ Kept $REMAINING backup(s)${NC}"
else
  echo -e "${RED}âœ— Backup failed!${NC}"
  exit 1
fi
